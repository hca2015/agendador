<script type="text/javascript">

    var aMinhaEmpresa = null;
    var data = @ViewBag.data;

    $(document).ready(function () {
        aMinhaEmpresa = new MinhaEmpresa();
        aMinhaEmpresa.inicializar("secMinhaEmpresa", data);
    });

    $(function () {
        $('.datetimepicker').datetimepicker();

        //$('.datetimepicker-addon').on('click', function () {
        //    $(this).prev('input.datetimepicker').data('DateTimePicker').toggle();
        //});
    });    

</script>

<section style="margin-top:25px;" id="secMinhaEmpresa">
    <div class="row">
        <div class="col-lg-8">
            <div>
                <h3 data-bind="text: data"><!--Dia completo--></h3>
                <!-- Agendas -->
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                #
                            </th>
                            <th scope="col">
                                Quem
                            </th>
                            <th scope="col">
                                O que
                            </th>
                            <th scope="col">
                                Quando
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: HORARIOAGENDA">
                        <tr>
                            <td scope="row" data-bind="text: $index"></td>
                            <td data-bind="text: NOME"><!--Nome--></td>
                            <td data-bind="text: SERVICO"><!--Serviço--></td>
                            <td data-bind="text: HORA"><!--Data--></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="jumbotron">
                    <!--Escolher dia-->
                <form>
                    <div class='input-group date form-group'>
                        <label>Selecionar um dia diferente...</label>
                            <input type='text' class="form-control datetimepicker" style="margin-top:10px; margin-bottom: 10px;" />
                            @*<span class="input-group-addon datetimepicker-addon col-md-4">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>*@
                        <button data-bind="click: alterarData" type="button" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
                <!-- Serviços e clientes fixos -->
                <div class="">
                    @Html.ActionLink("Gerenciar Serviços", "Servico", "Servico", null, null)
                </div>
                <div class="">
                    @Html.ActionLink("Gerenciar Clientes Fixos", "ClienteFixo", "Cliente", null, null)
                </div>
            </div>
        </div>
    </div>
</section>

