
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agendador</title>

    <script src="https://use.fontawesome.com/b458853859.js"></script>
    <link href="~/Theme/App.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    @Scripts.Render("~/bundle/Tcc/js")    
    <script>$('input').attr('autocomplete', 'off');</script>
</head>

<body style="padding:0px;">
    <nav class="navbar navbar-expand navbar-dark bg-dark flex-column flex-md-row bd-navbar">

        @Html.ActionLink("Agendador", "Index", "Home", null, new { @class = "navbar-brand" })

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">@Html.ActionLink("Início", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Sobre", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contato", "Contact", "Home", null, new { @class = "nav-link" })</li>

                @*<li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Gerenciar Empresa
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/MinhaEmpresa/MinhaEmpresa">Minha Empresa</a>
                            @Html.ActionLink("Cadastrar Empresa", "CadastrarCNPJ", "CNPJ", null, new { @class = "dropdown-item" })
                        </div>
                    </li>*@

                <li class="nav-item">@Html.ActionLink("Cadastrar empresa", "CadastrarCNPJ", "CNPJ", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Agenda", "MinhaEmpresa", "MinhaEmpresa", null, new { @class = "nav-link" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="alert alert-primary" hidden id="_loader" style="display:flex; margin:0px;">
        <p>Carregando...</p><div style="margin-left:20px;" class="loader"></div>
    </div>


    <div class="container body-content" style="margin-top:40px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FATEC Rubens Lara</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout-mapping.js"></script>
</body>
</html>

